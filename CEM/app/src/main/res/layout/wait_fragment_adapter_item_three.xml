<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:id="@+id/wait_item_three_rl"
            android:layout_width="@dimen/oneHundred"
            android:layout_margin="@dimen/fifteen"
            android:layout_height="@dimen/oneHundredTwenty">
            <ImageView
                android:id="@+id/wait_item_three_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/we"
                android:scaleType="fitXY"
                />
            <ImageView
                android:id="@+id/wait_item_three_playIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/a44"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/one_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/marginThree"
            android:layout_toRightOf="@id/wait_item_three_rl"
            android:layout_alignTop="@id/wait_item_three_rl">
            <TextView
                android:id="@+id/wait_item_three_nm_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center_vertical"
                android:textSize="@dimen/sizeTwenty"
                android:textStyle="bold"
                />
            <ImageView
                android:id="@+id/wait_item_three_threeD_iv"
                android:layout_gravity="center_vertical"
                android:layout_width="@dimen/twenty"
                android:layout_height="@dimen/twenty"

                android:layout_marginLeft="@dimen/marginFive"/>


        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/marginThree"
            android:layout_below="@id/one_ll"
            android:id="@+id/two_ll"
            android:orientation="horizontal"
            android:layout_alignLeft="@id/one_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/wait_item_three_wish_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="@color/guanzhong"
                android:textSize="@dimen/sizeTwenty"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/marginThree"
            android:id="@+id/three_ll"
            android:layout_below="@id/two_ll"
            android:layout_alignLeft="@id/two_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/wait_item_three_scm_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/four_ll"
            android:layout_below="@id/three_ll"
            android:layout_alignLeft="@id/three_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/marginThree">
            <TextView
                android:id="@+id/wait_item_three_star_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="@dimen/fifty"
            android:layout_height="@dimen/thirty"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btnshape"
            android:layout_marginRight="@dimen/marginTen">
            <TextView
                android:id="@+id/_goupiao_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/yushou"
                android:gravity="center"
                android:background="@null"
                android:textColor="@color/btn"
                />
        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>