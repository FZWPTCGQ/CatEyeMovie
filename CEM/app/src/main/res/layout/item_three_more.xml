<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/find_three_more_item_rl"
                android:layout_width="match_parent"
                android:layout_height="155dp"
                android:orientation="vertical"
    >

    <TextView
        android:id="@+id/find_three_more_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="标题"
        android:textColor="#000000"/>


    <ImageView
        android:id="@+id/find_three_more_one_iv"
        android:layout_width="250dp"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        android:layout_marginLeft="8dp"
        android:layout_alignLeft="@id/find_three_more_title_tv"
        android:layout_below="@id/find_three_more_title_tv"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/icon"
        />

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="8dp"
        android:layout_alignTop="@id/find_three_more_one_iv"
        android:layout_toRightOf="@id/find_three_more_one_iv"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/find_three_more_two_iv"
            android:layout_width="144dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@mipmap/icon"/>

        <ImageView
            android:id="@+id/find_three_more_three_iv"
            android:layout_width="144dp"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:src="@mipmap/icon"/>
    </LinearLayout>



<RelativeLayout
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_marginLeft="8dp"
android:layout_alignParentBottom="true"
    >

<TextView
    android:layout_centerVertical="true"
    android:id="@+id/find_three_more_nick_name_tv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="昵称"/>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_alignParentRight="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <TextView
            android:drawableLeft="@mipmap/eyes"
            android:gravity="center_vertical"
            android:id="@+id/find_three_more_view_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11111"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/find_three_more_comment_count_tv"
            android:layout_width="wrap_content"
            android:drawableLeft="@mipmap/message"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:text="11111"/>
    </LinearLayout>
</LinearLayout>
</RelativeLayout>

    </RelativeLayout>