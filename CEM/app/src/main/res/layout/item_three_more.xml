<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/find_three_more_item_rl"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:orientation="vertical"
                android:padding="5dp">

    <TextView
        android:id="@+id/find_three_more_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="标题"/>



    <RelativeLayout
        android:id="@+id/find_three_img_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">


        <ImageView
            android:id="@+id/find_three_more_one_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="13dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="13dp"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/find_three_more_one_iv"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/find_three_more_two_iv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@mipmap/icon"/>

            <ImageView
                android:id="@+id/find_three_more_three_iv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@mipmap/icon"/>
        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/find_three_more_nick_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="昵称"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:drawableLeft="@mipmap/eyes"
                    android:gravity="center_vertical"
                    android:id="@+id/find_three_more_view_count_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11111"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/find_three_more_comment_count_tv"
                    android:layout_width="wrap_content"
                    android:drawableLeft="@mipmap/message"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:text="11111"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>