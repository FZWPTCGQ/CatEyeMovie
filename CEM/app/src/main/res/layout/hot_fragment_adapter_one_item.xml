<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >
      <RelativeLayout
          android:id="@+id/hot_fragment_adapter_one_item_detail_rl"
          android:layout_width="@dimen/oneHundred"
          android:layout_margin="@dimen/fifteen"
          android:layout_height="@dimen/oneHundredFifty">
          <ImageView
              android:id="@+id/hot_fragment_adapter_one_item_detail_img"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@mipmap/we"
              android:scaleType="fitXY"
              />
          <ImageView
              android:id="@+id/hot_fragment_adapter_one_item_detail_playIv"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@mipmap/a44"
              android:layout_centerInParent="true"/>
      </RelativeLayout>
      <LinearLayout
          android:id="@+id/one_ll"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_margin="@dimen/marginThree"
          android:layout_toRightOf="@id/hot_fragment_adapter_one_item_detail_rl"
          android:layout_alignTop="@id/hot_fragment_adapter_one_item_detail_rl">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="长城"
              android:layout_gravity="center_vertical"
              android:textSize="@dimen/sizeTwenty"
              android:textStyle="bold"
              />
          <ImageView
              android:layout_gravity="center_vertical"
              android:layout_width="20dp"
              android:layout_height="20dp"
              android:src="@mipmap/wo"
              android:layout_marginLeft="@dimen/marginFive"/>


      </LinearLayout>
      <LinearLayout
          android:layout_below="@id/one_ll"
          android:orientation="horizontal"
          android:layout_alignLeft="@id/one_ll"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="观众 8.4"
            android:textColor="@color/guanzhong"
            android:textSize="@dimen/sizeTwenty"/>
       <TextView
           android:layout_width="@dimen/two"
           android:layout_height="@dimen/twelve"
           android:background="@color/shu"
           android:layout_marginLeft="@dimen/marginFive"
           android:layout_marginRight="@dimen/marginFive"/>
      </LinearLayout>
  </RelativeLayout>


</LinearLayout>