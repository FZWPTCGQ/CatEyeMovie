<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:id="@+id/title_bar"
                android:layout_height="44dp"
                android:background="@color/red">


    <TextView
        android:id="@+id/title_bar_tv_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:drawablePadding="5dp"
        android:drawableRight="@mipmap/area_drop"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/title_bar_iv_left"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:padding="@dimen/marginEight"
        />

    <TextView
        android:id="@+id/title_bar_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="影院"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:gravity="left" />

    <ImageView
        android:id="@+id/title_bar_iv_share"
        android:layout_width="48dp"
        android:src="@mipmap/search"
        android:layout_height="match_parent"
        android:padding="@dimen/marginEight"
        android:layout_alignParentRight="true" />

    <ImageView
        android:id="@+id/title_bar_iv_collect"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:padding="@dimen/marginEight"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/title_bar_iv_share"/>
</RelativeLayout>