<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="3dp"
    android:elevation="2dp"
    android:id="@+id/item_root"
    android:background="@mipmap/empty_logo"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    app:cardCornerRadius="2dp">

    <ImageView
        android:id="@+id/iv_mv_post"
        android:layout_marginTop="@dimen/marginFifteen"
        android:layout_marginLeft="@dimen/marginFifteen"
        android:layout_marginRight="@dimen/marginFifteen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:background="@mipmap/item_transtop"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       android:layout_gravity="bottom"

        android:padding="@dimen/fifteen">

        <ImageView
            android:id="@+id/iv_mv_type"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"

            android:src="@mipmap/home_page_video"/>

        <TextView
            android:id="@+id/tv_mv_title"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_mv_type"
            android:layout_alignTop="@id/iv_mv_type"
            android:textColor="@color/white"
        />

        <TextView
            android:id="@+id/tv_mv_descr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_mv_title"
            android:layout_marginTop="5dp"
            android:layout_below="@id/tv_mv_title"
            android:maxEms="15"
            android:textColor="@color/white"

            />
    </RelativeLayout>


</android.support.v7.widget.CardView>