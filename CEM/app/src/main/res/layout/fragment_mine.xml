<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/mine_fragment"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical"
             tools:context="com.example.qianggedemac.cem.mine.MineFragment"
             android:weightSum="1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="659dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#E9534E"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/main_head_portrait"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/acm"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/main_Sign_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="立即登录"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"/>


                <ImageView
                    android:id="@+id/main_sign_in_arrow"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/vz"
                    android:layout_marginLeft="200dp"
                    android:background="#E9534E"
                    android:layout_gravity="center"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                >

                <Button
                    android:id="@+id/main_want_to_see"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingTop="10dp"
                    android:drawableTop="@mipmap/a0k"
                    android:text="想看"
                    android:textSize="12sp"
                    android:background="#ffffff"/>

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="#ffffff">

                </LinearLayout>
                <Button
                    android:id="@+id/main_read"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingTop="10dp"
                    android:drawableTop="@mipmap/a0h"
                    android:text="看过"
                    android:textSize="12sp"
                    android:background="#ffffff"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="#f8f9ff"></View>
                <Button
                    android:id="@+id/main_film_critic"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingTop="10dp"
                    android:drawableTop="@mipmap/a0c"
                    android:text="影评"
                    android:textSize="12sp"
                    android:background="#ffffff"/>
                <FrameLayout
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="#ffffff">

                </FrameLayout>
                <Button
                    android:id="@+id/main_topic_of_conversation"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingTop="10dp"
                    android:drawableTop="@mipmap/a0j"
                    android:text="话题"
                    android:textSize="12sp"
                    android:background="#ffffff"/>

            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="#f4f4f5">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_my_order"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="#ffffff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的订单"
                    android:layout_marginLeft="15dp"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    android:id="@+id/textView3"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全部"
                    android:layout_marginLeft="250dp"
                    android:layout_gravity="center"/>

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/a7m"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f4f4f5">
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <Button
                    android:id="@+id/main_not_consume"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingTop="10dp"
                    android:drawableTop="@mipmap/a0q"
                    android:text="未消费"
                    android:textSize="12sp"
                    android:background="#ffffff"/>

                <Button
                    android:id="@+id/main_pending_payment"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingTop="10dp"
                    android:drawableTop="@mipmap/a0p"
                    android:text="待付款"
                    android:textSize="12sp"
                    android:background="#ffffff"/>

                <Button
                    android:id="@+id/main_to_be_evaluated"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingTop="10dp"
                    android:drawableTop="@mipmap/a0o"
                    android:text="待评价"
                    android:textSize="12sp"
                    android:background="#ffffff"/>

                <Button
                    android:id="@+id/main_refund"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingTop="10dp"
                    android:drawableTop="@mipmap/a0m"
                    android:text="退款"
                    android:textSize="12sp"
                    android:background="#ffffff"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="#f4f4f5">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/main_my_consumption"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="#ffffff">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的信息"
                    android:layout_marginLeft="15dp"
                    android:textColor="#000000"
                    android:layout_gravity="center"/>


                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/a7m"
                    android:layout_marginLeft="280dp"
                    android:layout_gravity="center"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f4f4f5">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/main_my_collection"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="#ffffff">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的收藏"
                    android:layout_marginLeft="15dp"
                    android:textColor="#000000"
                    android:layout_gravity="center"/>


                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/a7m"
                    android:layout_marginLeft="280dp"
                    android:layout_gravity="center"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f4f4f5">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/mine_member_conter"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="#ffffff">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="会员中心"
                    android:layout_marginLeft="15dp"
                    android:textColor="#000000"
                    android:layout_gravity="center"/>


                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/a7m"
                    android:layout_marginLeft="280dp"
                    android:layout_gravity="center"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f4f4f5">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/main_my_accomplishments"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="#ffffff">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的成就"
                    android:layout_marginLeft="15dp"
                    android:textColor="#000000"
                    android:layout_gravity="center"/>



                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/a7m"
                    android:layout_marginLeft="280dp"
                    android:layout_gravity="center"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#f4f4f5">
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="#f4f4f5">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_my_wallet"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="#ffffff">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的钱包"
                    android:layout_marginLeft="15dp"
                    android:textColor="#000000"
                    android:layout_gravity="center"/>


                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/a7m"
                    android:layout_marginLeft="280dp"
                    android:layout_gravity="center"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f4f4f5">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/main_balance"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="#ffffff">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="余额"
                    android:layout_marginLeft="15dp"
                    android:textColor="#000000"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00元"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:layout_margin="128dp" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/a7m"
                    android:layout_gravity="center"
                    android:id="@+id/imageView"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f4f4f5">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_coupon"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="#ffffff">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="优惠券"
                    android:layout_marginLeft="15dp"
                    android:textColor="#000000"
                    android:layout_gravity="center"/>


                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/a7m"
                    android:layout_marginLeft="295dp"
                    android:layout_gravity="center"
                    android:id="@+id/imageView3"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f4f4f5">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/main_shopping_mall"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="#ffffff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商场"
                    android:layout_marginLeft="15dp"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    android:id="@+id/textView"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_launcher"
                    android:layout_marginLeft="280dp"/>

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/a7m"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="#f4f4f5">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_set_up"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="#ffffff">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设置"
                    android:layout_marginLeft="15dp"
                    android:textColor="#000000"
                    android:layout_gravity="center"/>


                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/a7m"
                    android:layout_marginLeft="310dp"
                    android:layout_gravity="center"
                    android:id="@+id/imageView2"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#f4f4f5">
            </LinearLayout>

        </LinearLayout>


    </ScrollView>

</LinearLayout>
