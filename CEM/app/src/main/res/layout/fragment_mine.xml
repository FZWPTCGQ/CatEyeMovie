<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:id="@+id/mine_fragment"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:weightSum="1"
             tools:context="com.example.qianggedemac.cem.mine.MineFragment">



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="659dp"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/fragment_mine_login_ll"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="#E9534E"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/main_head_portrait"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:src="@mipmap/acm"/>

                    <TextView
                        android:id="@+id/main_Sign_in"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:text="立即登录"
                        android:textColor="#ffffff"
                        android:textSize="18sp"/>


                    <ImageView
                        android:id="@+id/main_sign_in_arrow"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="200dp"
                        android:background="#E9534E"
                        android:src="@mipmap/vz"
                    />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                >

                    <Button
                        android:id="@+id/main_want_to_see"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:drawableTop="@mipmap/a0k"
                        android:paddingTop="10dp"
                        android:text="想看"
                        android:textSize="12sp"/>

                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:background="#ffffff">

                    </LinearLayout>
                    <Button
                        android:id="@+id/main_read"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:drawableTop="@mipmap/a0h"
                        android:paddingTop="10dp"
                        android:text="看过"
                        android:textSize="12sp"/>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:background="#f8f9ff"></View>
                    <Button
                        android:id="@+id/main_film_critic"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:drawableTop="@mipmap/a0c"
                        android:paddingTop="10dp"
                        android:text="影评"
                        android:textSize="12sp"/>
                    <FrameLayout
                        android:layout_width="1dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:background="#ffffff">

                    </FrameLayout>
                    <Button
                        android:id="@+id/main_topic_of_conversation"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:drawableTop="@mipmap/a0j"
                        android:paddingTop="10dp"
                        android:text="话题"
                        android:textSize="12sp"/>

                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:background="#f4f4f5">
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/main_my_order"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="#ffffff">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:text="我的订单"
                        android:textColor="#000000"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="250dp"
                        android:text="全部"/>

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:src="@mipmap/a7m"
                    />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f4f4f5">
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp">
                    <Button
                        android:id="@+id/main_not_consume"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:drawableTop="@mipmap/a0q"
                        android:paddingTop="10dp"
                        android:text="未消费"
                        android:textSize="12sp"/>

                    <Button
                        android:id="@+id/main_pending_payment"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:drawableTop="@mipmap/a0p"
                        android:paddingTop="10dp"
                        android:text="待付款"
                        android:textSize="12sp"/>

                    <Button
                        android:id="@+id/main_to_be_evaluated"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:drawableTop="@mipmap/a0o"
                        android:paddingTop="10dp"
                        android:text="待评价"
                        android:textSize="12sp"/>

                    <Button
                        android:id="@+id/main_refund"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:drawableTop="@mipmap/a0m"
                        android:paddingTop="10dp"
                        android:text="退款"
                        android:textSize="12sp"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:background="#f4f4f5">
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/main_my_consumption"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="#ffffff">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:text="最新电影推荐"
                        android:textColor="#000000"/>


                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="280dp"
                        android:src="@mipmap/a7m"
                    />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f4f4f5">
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/main_my_collection"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="#ffffff">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:text="我的收藏"
                        android:textColor="#000000"/>


                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="280dp"
                        android:src="@mipmap/a7m"
                    />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f4f4f5">
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/mine_member_conter"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="#ffffff">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:text="视频功能"
                        android:textColor="#000000"/>


                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="280dp"
                        android:src="@mipmap/a7m"
                    />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f4f4f5">
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/main_my_accomplishments"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="#ffffff">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:text="扫一扫功能"
                        android:textColor="#000000"/>


                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="280dp"
                        android:src="@mipmap/a7m"
                    />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#f4f4f5">
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:background="#f4f4f5">
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/main_my_wallet"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="#ffffff">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:text="我的钱包"
                        android:textColor="#000000"/>


                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="280dp"
                        android:src="@mipmap/a7m"
                    />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f4f4f5">
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/main_balance"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="#ffffff">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:text="余额"
                        android:textColor="#000000"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="128dp"
                        android:text="0.00元"
                        android:textSize="18sp"/>

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/a7m"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f4f4f5">
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/main_coupon"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="#ffffff">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:text="优惠券"
                        android:textColor="#000000"/>


                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="295dp"
                        android:src="@mipmap/a7m"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f4f4f5">
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/main_shopping_mall"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="#ffffff">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:text="商场"
                        android:textColor="#000000"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="280dp"
                        android:src="@mipmap/ic_launcher"/>

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:src="@mipmap/a7m"
                    />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:background="#f4f4f5">
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/main_set_up"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="#ffffff">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:text="设置"
                        android:textColor="#000000"/>


                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="310dp"
                        android:src="@mipmap/a7m"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="#f4f4f5">
                </LinearLayout>

                <Button
                    android:id="@+id/fragment_mine_quit_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="退出"
                    android:textSize="18sp"
                    android:textColor="#ffffff"
                    android:background="#f27f78"/>


            </LinearLayout>


        </ScrollView>



</ScrollView>
