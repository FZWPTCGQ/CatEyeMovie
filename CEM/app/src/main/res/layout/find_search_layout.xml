<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/fifty"
    android:background="@color/red"
    tools:showIn="@layout/fragment_find">
    <com.example.qianggedemac.cem.view.ClearEditText
        android:id="@+id/search_clear_et"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/marginTen"
        android:background="@drawable/bg_edittext"
        android:drawableRight="@mipmap/ic_clear"

        android:gravity="center"
        android:hint="找影视剧、影人、影院"
        android:padding="2dp"
        android:singleLine="true"
        android:textSize="12sp">

    </com.example.qianggedemac.cem.view.ClearEditText>

    <TextView
        android:id="@+id/find_search_tv"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:text="取消"
        android:visibility="invisible"
        android:layout_marginRight="@dimen/five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/find_search_iv"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_alignTop="@id/search_clear_et"
        android:layout_centerVertical="true"
        android:layout_marginLeft="120dp"
        android:src="@mipmap/search"/>
</RelativeLayout>